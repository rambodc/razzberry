{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/transak",
        "function": {
          "functionId": "transak",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/fireblocks/ping",
        "function": {
          "functionId": "fireblocksPing",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
