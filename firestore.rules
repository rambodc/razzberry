rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Temporary permissive rule; expires on 2025-10-07.
    // Replace with proper auth-checked rules before expiry.
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 7);
    }
  }
}

